<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/khungdangky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_repage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/register_repage_image"
            android:background=""></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Tạo tài khoản của bạn"
            android:textSize="30dp"
            android:textColor="@color/blue"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hãy nhập thông tin đầy đủ và chính xác"
            android:textColor="@color/blue"></TextView>

        <EditText

            android:id="@+id/et_tendangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:drawableLeft="@drawable/register_user_image"
            android:drawablePadding="15dp"
            android:hint="Tên đăng nhập"
            android:padding="20dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/grey1">

        </EditText>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:drawableLeft="@drawable/register_email_image"
            android:drawablePadding="15dp"
            android:hint="Email"
            android:padding="20dp"
            android:textColorHint="@color/grey1"></EditText>

        <EditText
            android:id="@+id/et_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:drawableLeft="@drawable/register_password_image"
            android:drawablePadding="15dp"
            android:hint="Mật khẩu"
            android:padding="20dp"
            android:password="true"
            android:textColorHint="@color/grey1"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dkdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Điều khoản dịch vụ"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue">
            </Button>
        </LinearLayout>
        <Button
            android:id="@+id/bt_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="12dp"
            android:backgroundTint="@color/green"
            android:text="Đăng ký"
            android:textSize="23dp"></Button>
    </LinearLayout>


</RelativeLayout>