<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.login.login_main_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:layout_width="415dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/login_background" />

        <TextView
            android:layout_marginTop="100px"
            android:layout_marginLeft="40px"
            android:textSize="60px"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZoningZone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tra cứu Thông Tin Quy Hoạch Bất Động sản 2023" />

        <ImageButton
            android:id="@+id/login_main_start"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            app:srcCompat="@drawable/login_login_button" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/grey"
            app:srcCompat="@drawable/login_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/login_with_google1"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:background="@color/white"
                android:scaleType="center"
                android:src="@drawable/login_with_google">

            </ImageButton>

            <ImageButton
                android:id="@+id/login_with_facebook1"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:background="@color/white"
                android:scaleType="center"
                android:src="@drawable/login_with_facebook"></ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chua_dang_ky"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:text="Chưa có tài khoản?"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/login_main_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="Đăng Kí"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>