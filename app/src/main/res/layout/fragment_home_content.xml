<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".menu.home.home_content_fragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/home_content_banner"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_content_banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="190dp"
        android:layout_height="80dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Tin tức mới"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:gravity="center"
            android:textStyle="bold" />
        
        <ImageButton
            android:id="@+id/home_content_seemore"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_marginLeft="290dp"
            android:src="@drawable/home_content_seemore">
        </ImageButton>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>