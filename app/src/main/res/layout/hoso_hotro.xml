<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_button"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/hoso_hotro" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="33dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="5dp"
            android:text="Hỗ trợ"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="16sp" />
    </RelativeLayout>



    <TextView
        android:id="@+id/tieude1"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:text="Câu hỏi thường gặp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal|top"
        android:background="@drawable/text_background"
        android:ellipsize="end"
        android:maxLines="5"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_below="@+id/tieude1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_background"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/my_textview"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Làm thế nào để đăng tin rao bán/cho thuê nhà?"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <ImageButton
            android:id="@+id/button_down"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_down"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_background"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/layout1"
        >
        <TextView
            android:id="@+id/my_textview1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Tôi có thể lọc, sắp xếp kết quả tìm kiếm như thế nào?"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        <ImageButton
            android:id="@+id/button_down1"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_down"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_background"
        android:padding="10dp"
        android:layout_below="@+id/layout2">

        <TextView
            android:id="@+id/my_textview2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Tôi cần liên hệ với bên hỗ trợ như thế nào?"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        <ImageButton
            android:id="@+id/button_down2"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_down"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/warning_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Báo cáo sự cố"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

     
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/desk_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Điều khoản và chính sách"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/protect_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Bảo mật và quyền riêng tư"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/support_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_group"
        android:layout_marginTop="222dp"
        android:background="#000000"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hỗ trợ khách hàng: 1900xxxx"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>
